{

  "globals": {
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DEV__": true,
    "__DEVTOOLS__": true,
    "ga": true
  },

  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": false,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": false,
    "modules": true,
    "objectLiteralComputedProperties": false,
    "objectLiteralDuplicateProperties": false,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": false,
    "octalLiterals": false,
    "regexUFlag": false,
    "regexYFlag": false,
    "spread": true,
    "superInFunctions": false,
    "templateStrings": true,
    "unicodeCodePointEscapes": false,
    "globalReturn": false,
    "jsx": true
  },

  "env": {
    "node": true,
    "browser": true
  },

  "parser": "babel-eslint",

  "rules": {

    /* Possible Errors */

    "comma-dangle": [2, "never"],
    "no-cond-assign": [2, "always"],
    "no-console": 1,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-empty-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 1,
    "no-extra-parens": 0,
    "no-extra-semi": 1,
    "no-func-assign": 2,
    "no-inner-declarations": [2, "functions"],
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-reserved-keys": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": 0,
    "valid-typeof": 2,


    /* Best Practices */

    "block-scoped-var": 2,
    "complexity": 0,
    "consistent-return": 0,
    "curly": [1, "multi-line"],
    "default-case": 0,
    "dot-notation": 0,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-div-regex": 1,
    "no-else-return": 0,
    "no-empty-label": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-iterator": 1,
    "no-labels": 0,
    "no-lone-blocks": 0,
    "no-loop-func": 2,
    "no-multi-spaces": 0,
    "no-multi-str": 1,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-process-env": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-void": 2,
    "no-warning-comments": 0,
    "no-with": 2,
    "radix": 1,
    "vars-on-top": 0,
    "wrap-iife": [2, "any"],
    "yoda": 0,
    "strict": [2, "global"],


    /* Variables */

    "no-catch-shadow": 1,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow": 1,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-unused-vars": [0, { "vars": "all", "args": "after-used" }],       // Should be 2. JSX issue.
    "no-use-before-define": 2,


    /* Node.js */

    "handle-callback-err": [2, "^(err|error)$"],
    "no-mixed-requires": [1, false],
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 2,
    "no-restricted-modules": 0,
    "no-sync": 2,


    /* Stylistic Issues */

    "indent": [2, 2],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": 2,
    "comma-spacing": [2, { "before": false, "after": true }],
    "comma-style": [2, "last"],
    "consistent-this": [1, "self"],
    "eol-last": 1,
    "func-names": 0,
    "func-style": 0,
    "key-spacing": [0, {                                                // Should be 1. Eslint bug with `"align": "colon"`.
      "align": "colon",
      "beforeColon": false,
      "afterColon": true
    }],
    "max-nested-callbacks": [2, 3],
    "new-cap": 1,
    "new-parens": 0,
    "no-array-constructor": 2,
    "no-inline-comments": 0,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 1,
    "no-multiple-empty-lines": [2, { "max": 3 }],
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-ternary": 0,
    "no-trailing-spaces": 1,
    "no-underscore-dangle": 0,
    "no-wrap-func": 2,
    "one-var": 0,
    "operator-assignment": [2, "always"],
    "padded-blocks": 0,
    "quote-props": 0,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [0, "always"],                                              // Should be 2, but export () => {} ;(
    "semi-spacing": [2, { "before": false, "after": true }],
    "sort-vars": 0,
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-before-function-parentheses": [2, { "anonymous": "never", "named": "never" }],
    "space-in-brackets": 0,
    "space-in-parens": [1, "never"],
    "space-infix-ops": 1,
    "space-return-throw-case": 2,
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "spaced-line-comment": [1, "always"],
    "wrap-regex": 2,


    /* ECMAScript 6 */

    "no-var": 2,
    "generator-star-spacing": [2, "before"],


    /* Legacy */

    "max-depth": [1, 4],
    "max-params": [1, 4],
    "no-bitwise": 2

  }
}
