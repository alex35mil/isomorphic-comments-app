header
  width: 100%
  margin: 3.5rem 0 1rem
  padding: .2rem 0
  text-align: center

  @media mqPhone
    padding: 0

  h1
    margin: 0 0 1rem
    padding: 0
    font-size: 2.1rem
    font-weight: 700

    @media mqPhone
      width: 100%
      font-size: 1rem

    a
      padding: .5rem .9rem
      border: 0
      color: #fff
      background-color: $green

      @media mqPhone
        display: block
        width: 100%
