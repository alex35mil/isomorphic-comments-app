.group
  zoom: 1
  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both

.text
  &-center
    text-align: center
  &-left
    text-align: left
  &-right
    text-align: right
  &-justify
    text-align: justify

.float
  &-left
    float: left
  &-right
    float: right
  &-none
    float: none

.clear
  clear: both

.hidden
  display: none

.phone
  text-decoration: none